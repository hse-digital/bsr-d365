{
  "properties": {
    "connectionReferences": {
      "shared_commondataserviceforapps": {
        "runtimeSource": "embedded",
        "connection": {
          "connectionReferenceLogicalName": "bsr_DataverseApplicationUserWS2"
        },
        "api": {
          "name": "shared_commondataserviceforapps"
        }
      }
    },
    "definition": {
      "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
      "contentVersion": "1.0.0.0",
      "parameters": {
        "$connections": {
          "defaultValue": {},
          "type": "Object"
        },
        "$authentication": {
          "defaultValue": {},
          "type": "SecureObject"
        }
      },
      "triggers": {
        "When_a_row_is_added,_modified_or_deleted": {
          "metadata": {
            "operationMetadataId": "cf52670c-f9bc-4d82-b0f4-a6cdc2d1b3dd"
          },
          "type": "OpenApiConnectionWebhook",
          "inputs": {
            "host": {
              "connectionName": "shared_commondataserviceforapps",
              "operationId": "SubscribeWebhookTrigger",
              "apiId": "/providers/Microsoft.PowerApps/apis/shared_commondataserviceforapps"
            },
            "parameters": {
              "subscriptionRequest/message": 1,
              "subscriptionRequest/entityname": "bsr_notices",
              "subscriptionRequest/scope": 4
            },
            "authentication": "@parameters('$authentication')"
          }
        }
      },
      "actions": {
        "Get_Related_BCA_record": {
          "runAfter": {},
          "metadata": {
            "operationMetadataId": "fa0d7fad-ad54-4f58-a95b-3c17cbad362b"
          },
          "type": "OpenApiConnection",
          "inputs": {
            "host": {
              "connectionName": "shared_commondataserviceforapps",
              "operationId": "GetItem",
              "apiId": "/providers/Microsoft.PowerApps/apis/shared_commondataserviceforapps"
            },
            "parameters": {
              "entityName": "bsr_buildingcontrolapplications",
              "recordId": "@triggerOutputs()?['body/_bsr_bcapplicationid_value']",
              "$select": "bsr_buildingcontrolapplicationid"
            },
            "authentication": "@parameters('$authentication')"
          }
        },
        "List_all_related_BCL_records": {
          "runAfter": {
            "Get_Related_BCA_record": [
              "Succeeded"
            ]
          },
          "metadata": {
            "operationMetadataId": "74ee1e6f-e01a-4b6e-9ea9-684a2728e408"
          },
          "type": "OpenApiConnection",
          "inputs": {
            "host": {
              "connectionName": "shared_commondataserviceforapps",
              "operationId": "ListRecords",
              "apiId": "/providers/Microsoft.PowerApps/apis/shared_commondataserviceforapps"
            },
            "parameters": {
              "entityName": "bsr_buildingcontrollifecycles",
              "$select": "bsr_buildingcontrollifecycleid",
              "$filter": "_bsr_bcaaapplication_value eq @{outputs('Get_Related_BCA_record')?['body/bsr_buildingcontrolapplicationid']}",
              "$top": 1
            },
            "authentication": "@parameters('$authentication')"
          }
        },
        "Apply_to_each": {
          "foreach": "@outputs('List_all_related_BCL_records')?['body/value']",
          "actions": {
            "Update_a_row": {
              "runAfter": {},
              "metadata": {
                "operationMetadataId": "27ce5a58-ce8d-423b-bc82-123effc889e0"
              },
              "type": "OpenApiConnection",
              "inputs": {
                "host": {
                  "connectionName": "shared_commondataserviceforapps",
                  "operationId": "UpdateRecord",
                  "apiId": "/providers/Microsoft.PowerApps/apis/shared_commondataserviceforapps"
                },
                "parameters": {
                  "entityName": "bsr_noticeses",
                  "recordId": "@triggerOutputs()?['body/bsr_noticesid']",
                  "item/bsr_buildingcontrollifecycleid@odata.bind": "bsr_buildingcontrollifecycles(@{items('Apply_to_each')?['bsr_buildingcontrollifecycleid']})"
                },
                "authentication": "@parameters('$authentication')"
              }
            }
          },
          "runAfter": {
            "List_all_related_BCL_records": [
              "Succeeded"
            ]
          },
          "metadata": {
            "operationMetadataId": "fe225b37-1bf1-44fa-ac4b-c42d9dd10661"
          },
          "type": "Foreach"
        }
      }
    },
    "templateName": ""
  },
  "schemaVersion": "1.0.0.0"
}