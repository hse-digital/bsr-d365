{
  "properties": {
    "connectionReferences": {
      "shared_commondataserviceforapps": {
        "runtimeSource": "embedded",
        "connection": {
          "connectionReferenceLogicalName": "bsr_DataverseApplicationUserWS2"
        },
        "api": {
          "name": "shared_commondataserviceforapps"
        }
      }
    },
    "definition": {
      "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
      "contentVersion": "1.0.0.0",
      "parameters": {
        "$connections": {
          "defaultValue": {},
          "type": "Object"
        },
        "$authentication": {
          "defaultValue": {},
          "type": "SecureObject"
        },
        "NoReply Queue ID (bsr_noreplyqueueid)": {
          "defaultValue": "35b883f4-7d16-ee11-9cbe-6045bdd2c0c0",
          "type": "String",
          "metadata": {
            "schemaName": "bsr_noreplyqueueid"
          }
        }
      },
      "triggers": {
        "When_BCAA_record_submitted": {
          "metadata": {
            "operationMetadataId": "53435fbb-f0b3-4694-8719-1a0473e32265"
          },
          "type": "OpenApiConnectionWebhook",
          "inputs": {
            "host": {
              "connectionName": "shared_commondataserviceforapps",
              "operationId": "SubscribeWebhookTrigger",
              "apiId": "/providers/Microsoft.PowerApps/apis/shared_commondataserviceforapps"
            },
            "parameters": {
              "subscriptionRequest/message": 3,
              "subscriptionRequest/entityname": "bsr_buildingcontrolapplication",
              "subscriptionRequest/scope": 4,
              "subscriptionRequest/filteringattributes": "bsr_submissiondate",
              "subscriptionRequest/filterexpression": "bsr_submissiondate ne null"
            },
            "authentication": "@parameters('$authentication')"
          }
        }
      },
      "actions": {
        "Update_BCAA_status_to_Submitted": {
          "runAfter": {},
          "metadata": {
            "operationMetadataId": "82825d1c-2fb9-4719-b4d4-ef7efef0a19c"
          },
          "type": "OpenApiConnection",
          "inputs": {
            "host": {
              "connectionName": "shared_commondataserviceforapps",
              "operationId": "UpdateRecord",
              "apiId": "/providers/Microsoft.PowerApps/apis/shared_commondataserviceforapps"
            },
            "parameters": {
              "entityName": "bsr_buildingcontrolapplications",
              "recordId": "@triggerOutputs()?['body/bsr_buildingcontrolapplicationid']",
              "item/bsr_buildingcontrolapplicationstatus": 760810001
            },
            "authentication": "@parameters('$authentication')"
          }
        },
        "Get_all_related_Building_Details": {
          "runAfter": {
            "Send_confirmation_email_to_applicant": [
              "Succeeded"
            ]
          },
          "metadata": {
            "operationMetadataId": "55d20e58-b9c4-4113-94f1-dec65cfdaae2"
          },
          "type": "OpenApiConnection",
          "inputs": {
            "host": {
              "connectionName": "shared_commondataserviceforapps",
              "operationId": "ListRecords",
              "apiId": "/providers/Microsoft.PowerApps/apis/shared_commondataserviceforapps"
            },
            "parameters": {
              "entityName": "bsr_buildingdetailses",
              "$filter": "_bsr_bcapplicationid_value eq @{outputs('Update_BCAA_status_to_Submitted')?['body/bsr_buildingcontrolapplicationid']}"
            },
            "authentication": "@parameters('$authentication')"
          }
        },
        "Update_Status_in_each_Building_Details_record_to_Submitted": {
          "foreach": "@outputs('Get_all_related_Building_Details')?['body/value']",
          "actions": {
            "Update_a_row_2": {
              "runAfter": {},
              "metadata": {
                "operationMetadataId": "e3ff9659-4de1-4313-88f2-1872da221005"
              },
              "type": "OpenApiConnection",
              "inputs": {
                "host": {
                  "connectionName": "shared_commondataserviceforapps",
                  "operationId": "UpdateRecord",
                  "apiId": "/providers/Microsoft.PowerApps/apis/shared_commondataserviceforapps"
                },
                "parameters": {
                  "entityName": "bsr_buildingdetailses",
                  "recordId": "@items('Update_Status_in_each_Building_Details_record_to_Submitted')?['bsr_buildingdetailsid']",
                  "item/bsr_buildingdetailsstatus": 760810001,
                  "item/bsr_submissiondate": "@triggerOutputs()?['body/bsr_submissiondate']"
                },
                "authentication": "@parameters('$authentication')"
              }
            }
          },
          "runAfter": {
            "Get_all_related_Building_Details": [
              "Succeeded"
            ]
          },
          "metadata": {
            "operationMetadataId": "964597fd-1cf1-49db-a9f7-62bacade309a"
          },
          "type": "Foreach"
        },
        "Initialise_TemplateID": {
          "runAfter": {
            "Update_BCAA_status_to_Submitted": [
              "Succeeded"
            ]
          },
          "metadata": {
            "operationMetadataId": "36e9263c-df7b-49c8-91d5-9a95dcbc871f"
          },
          "type": "InitializeVariable",
          "inputs": {
            "variables": [
              {
                "name": "TemplateId",
                "type": "string",
                "value": "e010fc7e-9e57-ee11-be6f-6045bdd2c0c0"
              }
            ]
          }
        },
        "GetNoReplyQueue": {
          "runAfter": {
            "Initialise_TemplateID": [
              "Succeeded"
            ]
          },
          "metadata": {
            "operationMetadataId": "dad4944d-2f7e-4f43-b2e1-420298aa827e"
          },
          "type": "OpenApiConnection",
          "inputs": {
            "host": {
              "connectionName": "shared_commondataserviceforapps",
              "operationId": "GetItem",
              "apiId": "/providers/Microsoft.PowerApps/apis/shared_commondataserviceforapps"
            },
            "parameters": {
              "entityName": "queues",
              "recordId": "@parameters('NoReply Queue ID (bsr_noreplyqueueid)')",
              "$select": "queueid"
            },
            "authentication": "@parameters('$authentication')"
          }
        },
        "Send_confirmation_email_to_applicant": {
          "runAfter": {
            "GetNoReplyQueue": [
              "Succeeded"
            ]
          },
          "metadata": {
            "operationMetadataId": "e6732b65-a80b-4024-b264-9141b7b682c0"
          },
          "type": "OpenApiConnection",
          "inputs": {
            "host": {
              "connectionName": "shared_commondataserviceforapps",
              "operationId": "PerformUnboundAction",
              "apiId": "/providers/Microsoft.PowerApps/apis/shared_commondataserviceforapps"
            },
            "parameters": {
              "actionName": "SendEmailFromTemplate",
              "item/TemplateId": "@variables('TemplateId')",
              "item/Regarding": "/bsr_buildingcontrolapplications(@{triggerOutputs()?['body/bsr_buildingcontrolapplicationid']})",
              "item/Target": {
                "email_activity_parties": [
                  {
                    "partyid_queue@odata.bind": "/queues(@{outputs('GetNoReplyQueue')?['body/queueid']})",
                    "participationtypemask": 1
                  },
                  {
                    "partyid_contact@odata.bind": "/contacts(@{triggerOutputs()?['body/_bsr_applicantid_value']})",
                    "participationtypemask": 2
                  }
                ],
                "@@odata.type": "Microsoft.Dynamics.CRM.email"
              }
            },
            "authentication": "@parameters('$authentication')"
          }
        }
      }
    },
    "templateName": ""
  },
  "schemaVersion": "1.0.0.0"
}