{
  "properties": {
    "connectionReferences": {
      "shared_commondataserviceforapps": {
        "runtimeSource": "embedded",
        "connection": {
          "connectionReferenceLogicalName": "bsr_DataverseApplicationUserWS2"
        },
        "api": {
          "name": "shared_commondataserviceforapps"
        }
      }
    },
    "definition": {
      "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
      "contentVersion": "1.0.0.0",
      "parameters": {
        "$connections": {
          "defaultValue": {},
          "type": "Object"
        },
        "$authentication": {
          "defaultValue": {},
          "type": "SecureObject"
        },
        "NoReply Queue ID (bsr_noreplyqueueid)": {
          "defaultValue": "35b883f4-7d16-ee11-9cbe-6045bdd2c0c0",
          "type": "String",
          "metadata": {
            "schemaName": "bsr_noreplyqueueid"
          }
        }
      },
      "triggers": {
        "Runs_every_morning": {
          "recurrence": {
            "frequency": "Day",
            "interval": 1,
            "startTime": "2023-09-21T08:00:00Z"
          },
          "metadata": {
            "operationMetadataId": "3a9849c4-0c46-4147-a2b2-25f58e545fbf"
          },
          "type": "Recurrence"
        }
      },
      "actions": {
        "Initialize_variable": {
          "runAfter": {},
          "metadata": {
            "operationMetadataId": "cbac157f-ae0b-43ba-963b-687a6b95d7db"
          },
          "type": "InitializeVariable",
          "inputs": {
            "variables": [
              {
                "name": "Current Date",
                "type": "string",
                "value": "@{utcNow('yyyy-MM-dd')}T00:00:00Z"
              }
            ]
          }
        },
        "Lifecycle_records_that_require_a_warning_email_today": {
          "runAfter": {
            "Initialize_variable": [
              "Succeeded"
            ]
          },
          "metadata": {
            "operationMetadataId": "3c0ed51d-d57b-4128-a8c8-ac6ab370435b"
          },
          "type": "OpenApiConnection",
          "inputs": {
            "host": {
              "connectionName": "shared_commondataserviceforapps",
              "operationId": "ListRecords",
              "apiId": "/providers/Microsoft.PowerApps/apis/shared_commondataserviceforapps"
            },
            "parameters": {
              "entityName": "bsr_buildingcontrollifecycles",
              "$filter": "bsr_mandatorytimelinefailuredate eq @{variables('Current Date')} and bsr_assesssuccesscriteria eq false"
            },
            "authentication": "@parameters('$authentication')"
          }
        },
        "Queue": {
          "runAfter": {
            "Lifecycle_records_that_require_a_warning_email_today": [
              "Succeeded"
            ]
          },
          "metadata": {
            "operationMetadataId": "c2ba4f02-1556-4552-8d70-0f9ee9cef524"
          },
          "type": "OpenApiConnection",
          "inputs": {
            "host": {
              "connectionName": "shared_commondataserviceforapps",
              "operationId": "GetItem",
              "apiId": "/providers/Microsoft.PowerApps/apis/shared_commondataserviceforapps"
            },
            "parameters": {
              "entityName": "queues",
              "recordId": "@parameters('NoReply Queue ID (bsr_noreplyqueueid)')"
            },
            "authentication": "@parameters('$authentication')"
          }
        },
        "Email_template": {
          "runAfter": {
            "Queue": [
              "Succeeded"
            ]
          },
          "metadata": {
            "operationMetadataId": "ccaca2f7-4083-4058-ac12-85a3c3b3aac9"
          },
          "type": "OpenApiConnection",
          "inputs": {
            "host": {
              "connectionName": "shared_commondataserviceforapps",
              "operationId": "ListRecords",
              "apiId": "/providers/Microsoft.PowerApps/apis/shared_commondataserviceforapps"
            },
            "parameters": {
              "entityName": "templates",
              "$filter": "templateid eq 'edc0e370-a958-ee11-be6f-6045bdd2c0c0'"
            },
            "authentication": "@parameters('$authentication')"
          }
        },
        "Apply_to_each": {
          "foreach": "@outputs('Email_template')?['body/value']",
          "actions": {
            "Apply_to_each_2": {
              "foreach": "@outputs('Lifecycle_records_that_require_a_warning_email_today')?['body/value']",
              "actions": {
                "Perform_an_unbound_action": {
                  "runAfter": {},
                  "metadata": {
                    "operationMetadataId": "5bb04aad-97b5-4880-976b-3ed1ed7234e8"
                  },
                  "type": "OpenApiConnection",
                  "inputs": {
                    "host": {
                      "connectionName": "shared_commondataserviceforapps",
                      "operationId": "PerformUnboundAction",
                      "apiId": "/providers/Microsoft.PowerApps/apis/shared_commondataserviceforapps"
                    },
                    "parameters": {
                      "actionName": "SendEmailFromTemplate",
                      "item/TemplateId": "@items('Apply_to_each')?['templateid']",
                      "item/Regarding": "\\bsr_buildingcontrollifecycles\\@{items('Apply_to_each_2')?['bsr_buildingcontrollifecycleid']}",
                      "item/Target": {
                        "email_activity_parties": [
                          {
                            "participationtypemask": 1,
                            "partyid@odata.bind": "/queues(@{outputs('Queue')?['body/queueid']})"
                          },
                          {
                            "participationtypemask": 2,
                            "partyid@odata.bind": "/systemusers(@{items('Apply_to_each_2')?['_bsr_bclrcaseofficer_value']})"
                          }
                        ],
                        "@@odata.type": "Microsoft.Dynamics.CRM.email"
                      }
                    },
                    "authentication": "@parameters('$authentication')"
                  }
                }
              },
              "runAfter": {},
              "metadata": {
                "operationMetadataId": "d00b860b-fb3b-4a09-a08d-708f372de74e"
              },
              "type": "Foreach"
            }
          },
          "runAfter": {
            "Email_template": [
              "Succeeded"
            ]
          },
          "metadata": {
            "operationMetadataId": "9c7c8ff7-c09b-4892-9ddc-af51f738658d"
          },
          "type": "Foreach"
        }
      }
    },
    "templateName": ""
  },
  "schemaVersion": "1.0.0.0"
}