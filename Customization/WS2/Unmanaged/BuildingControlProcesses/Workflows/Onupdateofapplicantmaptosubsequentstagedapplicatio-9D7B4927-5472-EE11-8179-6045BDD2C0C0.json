{
  "properties": {
    "connectionReferences": {
      "shared_commondataserviceforapps": {
        "runtimeSource": "embedded",
        "connection": {
          "connectionReferenceLogicalName": "bsr_DataverseApplicationUserWS2"
        },
        "api": {
          "name": "shared_commondataserviceforapps"
        }
      }
    },
    "definition": {
      "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
      "contentVersion": "1.0.0.0",
      "parameters": {
        "$connections": {
          "defaultValue": {},
          "type": "Object"
        },
        "$authentication": {
          "defaultValue": {},
          "type": "SecureObject"
        }
      },
      "triggers": {
        "When_applicant_field_is_modified": {
          "metadata": {
            "operationMetadataId": "378edda3-30a9-44bc-964f-a04b431a5b75"
          },
          "type": "OpenApiConnectionWebhook",
          "inputs": {
            "host": {
              "connectionName": "shared_commondataserviceforapps",
              "operationId": "SubscribeWebhookTrigger",
              "apiId": "/providers/Microsoft.PowerApps/apis/shared_commondataserviceforapps"
            },
            "parameters": {
              "subscriptionRequest/message": 3,
              "subscriptionRequest/entityname": "bsr_buildingcontrolapplication",
              "subscriptionRequest/scope": 4,
              "subscriptionRequest/filteringattributes": "bsr_applicantid",
              "subscriptionRequest/filterexpression": "bsr_stagedapplication eq true"
            },
            "authentication": "@parameters('$authentication')"
          }
        }
      },
      "actions": {
        "Get_list_of_all_related_subsequent_staged_application_records": {
          "runAfter": {},
          "metadata": {
            "operationMetadataId": "e4730de5-b07e-473c-a452-c6bc36560349"
          },
          "type": "OpenApiConnection",
          "inputs": {
            "host": {
              "connectionName": "shared_commondataserviceforapps",
              "operationId": "ListRecords",
              "apiId": "/providers/Microsoft.PowerApps/apis/shared_commondataserviceforapps"
            },
            "parameters": {
              "entityName": "bsr_buildingcontrolapplications",
              "$select": "bsr_buildingcontrolapplicationid",
              "$filter": "bsr_issubsequentstagedapp eq true and _bsr_mainbcaappid_value eq @{triggerOutputs()?['body/bsr_buildingcontrolapplicationid']}"
            },
            "authentication": "@parameters('$authentication')"
          }
        },
        "Apply_to_each": {
          "foreach": "@outputs('Get_list_of_all_related_subsequent_staged_application_records')?['body/value']",
          "actions": {
            "Update_applicant_for_all_subsequent_staged_applications": {
              "runAfter": {},
              "metadata": {
                "operationMetadataId": "03cde46d-82ee-4712-8fc9-e04010e02720"
              },
              "type": "OpenApiConnection",
              "inputs": {
                "host": {
                  "connectionName": "shared_commondataserviceforapps",
                  "operationId": "UpdateRecord",
                  "apiId": "/providers/Microsoft.PowerApps/apis/shared_commondataserviceforapps"
                },
                "parameters": {
                  "entityName": "bsr_buildingcontrolapplications",
                  "recordId": "@items('Apply_to_each')?['bsr_buildingcontrolapplicationid']",
                  "item/bsr_applicantid@odata.bind": "/contacts(@{triggerOutputs()?['body/_bsr_applicantid_value']})"
                },
                "authentication": "@parameters('$authentication')"
              }
            }
          },
          "runAfter": {
            "Get_list_of_all_related_subsequent_staged_application_records": [
              "Succeeded"
            ]
          },
          "metadata": {
            "operationMetadataId": "ba824713-9629-44e3-8639-a215d45d36cd"
          },
          "type": "Foreach"
        }
      }
    },
    "templateName": ""
  },
  "schemaVersion": "1.0.0.0"
}