          "connectionReferenceLogicalName": "bsr_DataverseApplicationUserWS2"
        },
        "api": {
          "name": "shared_commondataserviceforapps"
        }
      }
    },
    "definition": {
      "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
      "contentVersion": "1.0.0.0",
      "parameters": {
        "$connections": {
          "defaultValue": {},
          "type": "Object"
        },
        "$authentication": {
          "defaultValue": {},
          "type": "SecureObject"
        },
        "NoReply Queue ID (bsr_noreplyqueueid)": {
          "defaultValue": "35b883f4-7d16-ee11-9cbe-6045bdd2c0c0",
          "type": "String",
          "metadata": {
            "schemaName": "bsr_noreplyqueueid"
          }
        }
      },
      "triggers": {
        "When_a_row_is_added,_modified_or_deleted": {
          "metadata": {
            "operationMetadataId": "dd610326-e0e8-49c9-93d6-3aed1098cc5f"
          },
          "type": "OpenApiConnectionWebhook",
          "inputs": {
            "host": {
              "connectionName": "shared_commondataserviceforapps_1",
              "operationId": "SubscribeWebhookTrigger",
              "apiId": "/providers/Microsoft.PowerApps/apis/shared_commondataserviceforapps"
            },
            "parameters": {
              "subscriptionRequest/message": 4,
              "subscriptionRequest/entityname": "bsr_payment",
              "subscriptionRequest/scope": 4,
              "subscriptionRequest/filteringattributes": "bsr_paymentid,bsr_paymentreconciliationstatus",
              "subscriptionRequest/filterexpression": "bsr_paymentreconciliationstatus eq 760810001"
            },
            "authentication": "@parameters('$authentication')"
          }
        }
      },
      "actions": {
        "GetPayment": {
          "runAfter": {
            "Initialize_variable_-_TemplateId": [
              "Succeeded"
            ]
          },
          "metadata": {
            "operationMetadataId": "4b12a1b3-d551-4ab8-8c99-188b33b2e5e4"
          },
          "type": "OpenApiConnection",
          "inputs": {
            "host": {
              "connectionName": "shared_commondataserviceforapps_1",
              "operationId": "GetItem",
              "apiId": "/providers/Microsoft.PowerApps/apis/shared_commondataserviceforapps"
            },
            "parameters": {
              "entityName": "bsr_payments",
              "recordId": "@triggerOutputs()?['body/bsr_paymentid']",
              "$select": "_bsr_buildingcontrolapplication_value,bsr_paymentreconciliationstatus,bsr_paymentid,bsr_paymenttypecode",
              "$expand": "bsr_buildingcontrolapplication($select=bsr_buildingcontrolapplicationid)"
            },
            "authentication": "@parameters('$authentication')"
          }
        },
        "Condition": {
          "actions": {
            "GetBCA": {
              "runAfter": {},
              "metadata": {
                "operationMetadataId": "01cda44b-d1fb-4ce9-bd77-55c76074bb52"
              },
              "type": "OpenApiConnection",
              "inputs": {
                "host": {
                  "connectionName": "shared_commondataserviceforapps_1",
                  "operationId": "GetItem",
                  "apiId": "/providers/Microsoft.PowerApps/apis/shared_commondataserviceforapps"
                },
                "parameters": {
                  "entityName": "bsr_buildingcontrolapplications",
                  "recordId": "@outputs('GetPayment')?['body/_bsr_buildingcontrolapplication_value']",
                  "$select": "_bsr_applicantid_value,bsr_applicationname,bsr_bcaareferencenumber,bsr_name,bsr_buildingcontrolapplicationid"
                },
                "authentication": "@parameters('$authentication')"
              }
            },
            "GetNoReplyQueue": {
              "runAfter": {
                "GetBCA": [
                  "Succeeded"
                ]
              },
              "metadata": {
                "operationMetadataId": "0b77d5be-d062-400f-ae1b-e01016599dc8"
              },
              "type": "OpenApiConnection",
              "inputs": {
                "host": {
                  "connectionName": "shared_commondataserviceforapps_1",
                  "operationId": "GetItem",
                  "apiId": "/providers/Microsoft.PowerApps/apis/shared_commondataserviceforapps"
                },
                "parameters": {
                  "entityName": "queues",
                  "recordId": "@parameters('NoReply Queue ID (bsr_noreplyqueueid)')",
                  "$select": "queueid,name"
                },
                "authentication": "@parameters('$authentication')"
              }
            },
            "Perform_an_unbound_action": {
              "runAfter": {
                "GetNoReplyQueue": [
                  "Succeeded"
                ]
              },
              "metadata": {
                "operationMetadataId": "91b4d901-b826-45ad-a598-469231f088ab"
              },
              "type": "OpenApiConnection",
              "inputs": {
                "host": {
                  "connectionName": "shared_commondataserviceforapps_1",
                  "operationId": "PerformUnboundAction",
                  "apiId": "/providers/Microsoft.PowerApps/apis/shared_commondataserviceforapps"
                },
                "parameters": {
                  "actionName": "SendEmailFromTemplate",
                  "item/TemplateId": "@variables('TemplateId')",
                  "item/Regarding": "/bsr_buildingcontrolapplications(@{outputs('GetBCA')?['body/bsr_buildingcontrolapplicationid']})",
                  "item/Target": {
                    "email_activity_parties": [
                      {
                        "partyid_queue@odata.bind": "/queues(@{outputs('GetNoReplyQueue')?['body/queueid']})",
                        "participationtypemask": 1
                      },
                      {
                        "partyid_contact@odata.bind": "/contacts(@{outputs('GetBCA')?['body/_bsr_applicantid_value']})",
                        "participationtypemask": 2
                      }
                    ],
                    "@@odata.type": "Microsoft.Dynamics.CRM.email"
                  }
                },
                "authentication": "@parameters('$authentication')"
              }
            }
          },
          "runAfter": {
            "GetPayment": [
              "Succeeded"
            ]
          },
          "else": {
            "actions": {
              "Terminate": {
                "runAfter": {},
                "metadata": {
                  "operationMetadataId": "feac6aa5-374e-491c-9ec6-a61df68a4f04"
                },
                "type": "Terminate",
                "inputs": {
                  "runStatus": "Cancelled"
                }
              }
            }
          },
          "expression": {
            "not": {
              "equals": [
                "@outputs('GetPayment')?['body/_bsr_buildingcontrolapplication_value']",
                "@null"
              ]
            }
          },
          "metadata": {
            "operationMetadataId": "ba06934b-0119-47c1-a4b7-86f7a097ebbd"
          },
          "type": "If"
        },
        "Initialize_variable_-_TemplateId": {
          "runAfter": {},
          "metadata": {
            "operationMetadataId": "1a79bda5-a629-4966-abda-465936bb1abd"
          },
          "type": "InitializeVariable",
          "inputs": {
            "variables": [
              {
                "name": "TemplateId",
                "type": "string",
                "value": "562afbf1-2756-ee11-be6f-6045bdd2c0c0"
              }
            ]
          }
        }
      }
    },
    "templateName": ""
  },
  "schemaVersion": "1.0.0.0"
}