            "parameters": {
              "subscriptionRequest/message": 3,
              "subscriptionRequest/entityname": "bsr_section25review",
              "subscriptionRequest/scope": 4,
              "subscriptionRequest/filteringattributes": "bsr_s25paymentstatus",
              "subscriptionRequest/filterexpression": "bsr_s25paymentstatus eq 760810000 and bsr_paymentmethod eq 760810000 and bsr_cardpaymentreferencenumber ne null"
            },
            "authentication": "@parameters('$authentication')"
          }
        }
      },
