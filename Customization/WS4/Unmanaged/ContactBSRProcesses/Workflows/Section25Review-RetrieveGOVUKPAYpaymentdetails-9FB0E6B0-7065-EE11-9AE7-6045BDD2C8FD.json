        "Add_a_new_row": {
          "runAfter": {
            "Compose_billing_address": [
              "Succeeded"
            ]
          },
          "metadata": {
            "operationMetadataId": "8f8b89ea-ebe7-4637-9204-cd49a7d24408"
          },
          "type": "OpenApiConnection",
          "inputs": {
            "host": {
              "connectionName": "shared_commondataserviceforapps",
              "operationId": "CreateRecord",
              "apiId": "/providers/Microsoft.PowerApps/apis/shared_commondataserviceforapps"
            },
            "parameters": {
              "entityName": "bsr_payments",
              "item/bsr_amountpaid": "@body('Parse_JSON')?['Amount']",
              "item/bsr_billingaddress": "@replace(outputs('Compose_billing_address'), ', ,', ', ')",
              "item/bsr_cardbrandegvisa": "@body('Parse_JSON')?['CardBrand']",
              "item/bsr_cardexpirydate": "@body('Parse_JSON')?['CardExpiryDate']",
              "item/bsr_cardtypecreditdebit": "@if(equals(body('Parse_JSON')?['CardType'],'credit'),760810000,760810001)",
              "item/bsr_emailaddress": "@body('Parse_JSON')?['Email']",
              "item/bsr_govukpaymentid": "@body('Parse_JSON')?['PaymentId']",
              "item/bsr_lastfourdigitsofcardnumber": "@body('Parse_JSON')?['LastFourDigitsCardNumber']",
              "item/bsr_name": "@body('Parse_JSON')?['PaymentId']",
              "item/bsr_paymentreconciliationstatus": 760810000,
              "item/bsr_govukpaystatus": "@body('Parse_JSON')?['Status']",
              "item/bsr_paymenttypecode": 760810000,
              "item/bsr_transactionid": "@body('Parse_JSON')?['Reference']",
              "item/bsr_Section25Review@odata.bind": "\\bsr_section25reviews(@{triggerOutputs()?['body/bsr_section25reviewid']})",
              "item/bsr_service": "Section 25 Review",
              "item/bsr_timeanddateoftransaction": "@body('Parse_JSON')?['CreatedDate']"
            },
            "authentication": "@parameters('$authentication')"
          }
        },
        "Update_a_row": {
          "runAfter": {
