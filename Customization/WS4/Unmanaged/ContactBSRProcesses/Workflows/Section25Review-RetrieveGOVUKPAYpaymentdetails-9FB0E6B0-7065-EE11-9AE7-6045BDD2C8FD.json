          },
          "metadata": {
            "operationMetadataId": "ead1076b-ca91-4200-9014-f477ffa0225b"
          },
          "type": "Compose",
          "inputs": "@{body('Parse_JSON')?['AddressLineOne']}, @{body('Parse_JSON')?['AddressLineTwo']}, @{body('Parse_JSON')?['City']}, @{body('Parse_JSON')?['Postcode']}"
